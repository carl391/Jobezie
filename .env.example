# Jobezie Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# DATABASE
# =============================================================================
# Development: PostgreSQL local instance
DATABASE_URL=postgresql://localhost/jobezie_dev

# Production: Use your hosted PostgreSQL URL
# DATABASE_URL=postgresql://user:password@host:5432/jobezie_prod

# =============================================================================
# REDIS (Caching & Rate Limiting)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude (Primary AI - analysis, coaching, research)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI GPT-4 (Secondary AI - creative content, fallback)
OPENAI_API_KEY=sk-...

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_EXPERT=price_...
STRIPE_PRICE_CAREER_KEEPER=price_...

# =============================================================================
# EMAIL SERVICE (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@jobezie.com
SENDGRID_FROM_NAME=Jobezie

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=https://...

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
ENABLE_LINKEDIN_OPTIMIZER=true
ENABLE_LABOR_MARKET=true
ENABLE_AI_COACH=true

# =============================================================================
# FRONTEND URL (for email links)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# LABOR MARKET DATA (Optional)
# =============================================================================
BLS_API_KEY=your-bls-api-key
ONET_USERNAME=your-onet-username
ONET_PASSWORD=your-onet-password
